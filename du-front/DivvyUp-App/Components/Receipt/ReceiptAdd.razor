@using BlazorBootstrap
﻿@using Microsoft.FluentUI.AspNetCore.Components

<div class="container">
    <div class="section">
        <span class="label">Nazwa</span>
        <input type="text" class="form-control" @bind="@NameReceipt" aria-describedby="basic-addon1">
    </div>
    <div class="section">
        <span class="label">Data</span>
        <DateInput @bind-Value="@DateReceipt" Class="form-control" />
    </div>
    <div class="section button-section">
        <FluentButton Class="inputs" OnClick="@AddReceipt">Dodaj</FluentButton>
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-wrap: wrap;
        height: 70px;
        gap: 20px;
        width: 100%;
    }

    .section {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 200px;
        height: 35px;
    }

    .delivery-checkbox {
        width: 34px;
        height: 34px;
        margin-left: 5px;
    }

    .button-section {
        align-self: center;
        margin-top: 20px;
    }

    .inputs {
        width: 200px;
        height: 35px;
    }
</style>