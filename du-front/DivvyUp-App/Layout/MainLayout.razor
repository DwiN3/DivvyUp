@inherits LayoutComponentBase
@using Radzen.Blazor


<div class="bb-page">
    <main>
        <RadzenMenu Style="flex-grow: 1;">
            <RadzenMenuItem Text="Strona Główna" Path="/" Icon="home"></RadzenMenuItem>
            <RadzenMenuItem Text="Rachunki" Path="/receipt" Icon="receipt_long" Visible="@User.IsLoggedIn()"></RadzenMenuItem>
            <div style="display: flex; flex-direction: row; margin-left: auto;">
                <RadzenMenuItem Text="Logowanie" Path="/login" Icon="login" Visible="@(!User.IsLoggedIn())"></RadzenMenuItem>
                <RadzenMenuItem Text="Rejestracja" Path="/register" Icon="input" Visible="@(!User.IsLoggedIn())"></RadzenMenuItem>
                <RadzenMenuItem Text="Wyloguj się" Icon="logout" Click="@Logout" Visible="@(User.IsLoggedIn())"></RadzenMenuItem>
            </div>
        </RadzenMenu>
        @Body
    </main>
</div>
