@inherits LayoutComponentBase
@using Radzen
@using Radzen.Blazor

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => SidebarExpanded = !SidebarExpanded)" />
            <RadzenLabel Text="@Header" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(SidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Strona Główna" Path="/" Icon="home" />
            <RadzenPanelMenuItem Text="Rachunki" Path="/receipt" Icon="receipt_long" Visible="@User.IsLoggedIn()" />
            <RadzenPanelMenuItem Text="Logowanie" Path="/login" Icon="login" Visible="@(!User.IsLoggedIn())" />
            <RadzenPanelMenuItem Text="Rejestracja" Path="/register" Icon="input" Visible="@(!User.IsLoggedIn())" />
            <RadzenPanelMenuItem Text="Wyloguj się" Icon="logout" Click="@Logout" Visible="@(User.IsLoggedIn())" />
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
</RadzenLayout>