@page "/register"
@using Microsoft.FluentUI.AspNetCore.Components

<div style="height: 100%; display:flex; justify-content: center; align-items: center;">
    <div class="inputs">
        <FluentTextField Class="inputs" @bind-Value="@Username" Label="Username"></FluentTextField>
        <FluentTextField Class="inputs" @bind-Value="@Email" Label="Email" TextFieldType="TextFieldType.Email"></FluentTextField>
        <FluentTextField Class="inputs" @bind-Value="@Password" Label="Password" TextFieldType="TextFieldType.Password"></FluentTextField>
        <FluentButton Class="inputs" Style="margin-top: 20px;" OnClick="@CreateAccount">Stwórz konto</FluentButton>
        <FluentButton Class="inputs" Style="margin-top: 20px;" OnClick="@(() => Navigation.NavigateTo("/"))">Wróć do logowania</FluentButton>
        <span style="color: @ColorInfo">@RegisterInfo</span>
    </div>
</div>

<style>
    .inputs{
        width: 300px
    }
</style>