@page "/register"
@using Radzen.Blazor

<div style="height: 100%; display:flex; justify-content: center; align-items: center;">
    <div style="width: 300px;">
        <span style="color: @ColorInfo; margin-bottom: 10px;">@RegisterInfo</span>
        <RadzenFormField class="input" Text="Nazwa">
            <RadzenTextBox @bind-Value="@Username"/>
        </RadzenFormField>
        <RadzenFormField class="input" Text="Email">
            <RadzenTextBox @bind-Value="@Email"/>
        </RadzenFormField>
        <RadzenFormField class="input" Text="Hasło">
            <RadzenPassword @bind-Value="@Password"/>
        </RadzenFormField>
        <RadzenButton Style="margin-top: 20px; width: 100%;" Text="Stwórz konto" Click="@CreateAccount"/>
        <RadzenButton Style="margin-top: 20px; width: 100%;" Text="Wróć do logowania" Click="@(() => Navigation.NavigateTo("/"))"/>
    </div>
</div>

<style>
    .input{
        width: 100%
    }
</style>