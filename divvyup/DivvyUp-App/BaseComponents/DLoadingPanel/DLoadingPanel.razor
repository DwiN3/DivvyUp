@using DivvyUp_Shared.Enums

<div class="loading-overlay" style="@(IsLoading ? "display: flex;" : "display: none;")">
    @if (ValueMode == LoadingPanelMode.FadeValue)
    {
        <RadzenProgressBarCircular Mode="ProgressBarMode.Indeterminate" ProgressBarStyle="ProgressBarStyle.Secondary" Size="@Size" ShowValue="true" Value="@Value"  />
    }
    else if (ValueMode == LoadingPanelMode.Fade)
    {
        <RadzenProgressBarCircular Mode="ProgressBarMode.Indeterminate" ProgressBarStyle="ProgressBarStyle.Secondary" Size="@Size" ShowValue="false" />
    }
    else if (ValueMode == LoadingPanelMode.FullScreen)
    {
        <RadzenProgressBarCircular Style="position: fixed; height: 100vh; width: 100vw; top: 0; left: 0; z-index: 1000;" Mode="ProgressBarMode.Indeterminate" ProgressBarStyle="ProgressBarStyle.Secondary" Size="@Size" ShowValue="false" />
    }
</div>

@code {
    [Parameter] 
    public bool IsLoading { get; set; } = true;
    [Parameter]
    public double Value { get; set; }
    [Parameter] 
    public LoadingPanelMode ValueMode { get; set; } = LoadingPanelMode.Fade;
    [Parameter] 
    public ProgressBarCircularSize Size { get; set; } = ProgressBarCircularSize.Large;
}

<style>
    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        pointer-events: all;
    }

    .rz-progressbar-circular-label{
        color: #cd3d64;
        font-weight: bold;
    }
</style>