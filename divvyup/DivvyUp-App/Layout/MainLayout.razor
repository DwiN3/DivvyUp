@inherits LayoutComponentBase
@using DivvyUp_Shared.AppConstants
@using Radzen
@using Radzen.Blazor

<RadzenLayout>
    <RadzenDialog />
    <RadzenNotification Style="position: absolute; top: 15px; left: 50%; transform: translateX(-50%); width: 90%; border-radius: 25px;"  />
    <RadzenHeader Style="background-image: linear-gradient(to right, #6a11cb, #2575fc);">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => SidebarExpanded = !SidebarExpanded)"/>
            <RadzenLabel Text="@Header"/>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="true" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(SidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="Główny panel" Path="@AppPath.DASHBOARD" Icon="dashboard" />
            <RadzenPanelMenuItem Text="Rachunki" Path="@AppPath.RECEIPT" Icon="receipt_long" Visible="@(UserAppService.IsLoggedIn())"/>
            <RadzenPanelMenuItem Text="Pożyczki" Path="@AppPath.LOAN" Icon="payments" Visible="@(UserAppService.IsLoggedIn())"/>
            <RadzenPanelMenuItem Text="Osoby" Path="@AppPath.PERSON" Icon="diversity_3" Visible="@(UserAppService.IsLoggedIn())"/>
            <RadzenPanelMenuItem Text="Konto" Path="@AppPath.ACCOUT_MANAGER" Icon="manage_accounts" Visible="@(UserAppService.IsLoggedIn())" />
            <RadzenPanelMenuItem Text="Logowanie" Path="@AppPath.LOGIN" Icon="login" Visible="@(!UserAppService.IsLoggedIn())"/>
            <RadzenPanelMenuItem Text="Rejestracja" Path="@AppPath.REGISTER" Icon="input" Visible="@(!UserAppService.IsLoggedIn())"/>
            <RadzenPanelMenuItem Text="Wyloguj się" Icon="logout" Click="@Logout" Visible="@(UserAppService.IsLoggedIn())"/>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        @Body
    </RadzenBody>
</RadzenLayout>